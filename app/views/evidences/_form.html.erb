<%= form_for [@hunch, @evidence] do |f| %>
  <% if @evidence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evidence.errors.count, "error") %> prohibited this evidence from being saved:</h2>

      <ul>
      <% @evidence.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.hidden_field :hunch_id, :value=>params[:hunch_id] %>
    <%= f.label :rating, 'How much this evidence supports the hunch (-3 to +3)' %><br />
    <%= f.text_field :rating %>
  </div>
  <div class="field">
    <%= f.label :title, 'Short description' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, 'Explanation' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
